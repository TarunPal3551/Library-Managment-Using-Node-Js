<% if (books.length > 0) { %>
      <div class="grid">
          <% for (let book of books) { %>
              <article class="card">
                  <div class="card__image">
                      <img src="/<%= book.bookImage.path %>" alt="<%= book._id %>">
                  </div>
                 
              
              </article>
              <% } %>
      </div>
      <% } else { %>
          <h1>No Products Found!</h1>
          <% } %>